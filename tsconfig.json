{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "esnext",
        "moduleResolution": "node",
        "allowJs": true,
        "checkJs": false,
        "sourceMap": true,
        "strict": false,
        "jsx": "react",
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["webpack.config.js", "node_modules"]
}
